<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="OdysseyPatch.PatchOperationReplaceIf">
		<xpath>/Defs/ThingDef[thingClass="Building_OutfitStand"]/thingClass</xpath>
		<value>
			<thingClass>OdysseyPatch.OutfitStandGroupsInBills.SlotGroupParent_OutfitStand</thingClass>
		</value>
		<setting>OutfitStandGroupsInBills</setting>
	</Operation>
	<Operation Class="OdysseyPatch.PatchOperationReplaceIf">
		<xpath>/Defs/ThingDef[thingClass="Building_KidOutfitStand"]/thingClass</xpath>
		<value>
			<thingClass>OdysseyPatch.OutfitStandGroupsInBills.SlotGroupParent_KidOutfitStand</thingClass>
		</value>
		<setting>OutfitStandGroupsInBills</setting>
	</Operation>
	
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ThingDef[@Name="OutfitStandBase"]/comps</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name="OutfitStandBase"]</xpath>
					<value>
						<comps />
					</value>
				</nomatch>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name="OutfitStandBase"]/comps</xpath>
				<value>
					<li Class="OdysseyPatch.OutfitStandBodyType.CompProperties_OutfitStandBodyType" />
				</value>
			</li>
		</operations>
	</Operation>
</Patch>